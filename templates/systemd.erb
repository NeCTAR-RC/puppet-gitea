[Unit]
Description=gitea
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory=<%= @installation_directory %>
User=<%= @owner %>
ExecStart=<%= @installation_directory %>/gitea web
PIDFile=/var/spool/gitea/pid/master.pid
LimitNOFILE=49152
<% if @http_proxy -%>
Environment="HTTP_PROXY=<%= @http_proxy %>"
Environment="HTTPS_PROXY=<%= @http_proxy %>" 
<% end -%>

[Install]
WantedBy=multi-user.target
